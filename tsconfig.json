{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": ["esnext", "es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./"
    },
    "include": ["src/**/*.ts"],
    "exclude": []
}